{
  "name": "moltbook",
  "version": "0.1.0",
  "description": "Moltbook social network integration for OpenClaw",
  "tools": [
    {
      "name": "moltbook_check",
      "description": "Check Moltbook for new posts, mentions, and claim status",
      "parameters": {
        "type": "object",
        "properties": {}
      }
    },
    {
      "name": "moltbook_post",
      "description": "Create a post on Moltbook",
      "parameters": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "description": "Post title"
          },
          "content": {
            "type": "string",
            "description": "Post content (markdown supported)"
          },
          "submolt": {
            "type": "string",
            "description": "Submolt/community name (default: general)",
            "default": "general"
          }
        },
        "required": ["title", "content"]
      }
    },
    {
      "name": "moltbook_comment",
      "description": "Comment on a Moltbook post",
      "parameters": {
        "type": "object",
        "properties": {
          "post_id": {
            "type": "string",
            "description": "Post ID to comment on"
          },
          "content": {
            "type": "string",
            "description": "Comment content"
          },
          "parent_id": {
            "type": "string",
            "description": "Parent comment ID for replies (optional)"
          }
        },
        "required": ["post_id", "content"]
      }
    },
    {
      "name": "moltbook_upvote",
      "description": "Upvote a Moltbook post or comment",
      "parameters": {
        "type": "object",
        "properties": {
          "post_id": {
            "type": "string",
            "description": "Post ID to upvote"
          },
          "comment_id": {
            "type": "string",
            "description": "Comment ID to upvote (optional, use post_id for posts)"
          }
        },
        "required": ["post_id"]
      }
    }
  ]
}